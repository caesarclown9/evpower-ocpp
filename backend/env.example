# Database settings for Supabase
DATABASE_URL=postgresql://your_user:your_password@your_host:5432/your_database
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# Redis settings
REDIS_URL=redis://localhost:6379

# Legacy JWT settings (backward compatibility)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# App settings
APP_HOST=0.0.0.0
APP_PORT=8000

# Server settings
LOG_LEVEL=INFO
LOG_PATH=/var/log/ocpp
ALLOWED_HOSTS=*
CORS_ORIGINS=

# Security (ОБЯЗАТЕЛЬНО ЗАПОЛНИТЬ!)
SECRET_KEY=your_super_secure_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# EZS Payment Settings (ОБЯЗАТЕЛЬНО ЗАПОЛНИТЬ!)
EZS_SECRET_KEY=your_ezs_secret_key_here
DEFAULT_CURRENCY=KGS
PAYMENT_TIMEOUT_MINUTES=30

